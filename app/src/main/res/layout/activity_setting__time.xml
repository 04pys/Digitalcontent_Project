<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Time">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="25dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약 이름"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/medicine_name"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/medicine_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />

    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:visibility="gone"
        />
    <RadioGroup
        android:id="@+id/meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        >
        <RadioButton
            android:id="@+id/after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식전"
            android:textSize="15dp"
            android:padding="10dp"

            />
        <RadioButton
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식후"
            android:textSize="15dp"
            android:padding="10dp"
            />
    </RadioGroup>
    <EditText
        android:id="@+id/minutes"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:inputType="number"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/meal"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="분"
        android:textSize="30dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/minutes"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>