<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <EditText
        android:id="@+id/signup_edittext_user_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/id_error"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지않습니다."
        android:textSize="15dp"
        android:textColor="#F04747"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/signup_edittext_user_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/signup_edittext_user_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/signup_edittext_user_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        />
    <EditText
        android:id="@+id/signup_edittext_user_password_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/signup_edittext_user_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        />
    <Button
        android:id="@+id/signup_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#96AAEB"
        app:layout_constraintTop_toBottomOf="@id/signup_edittext_user_password_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/pwd_error"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지않습니다."
        android:textSize="15dp"
        android:textColor="#F04747"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/signup_edittext_user_password_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>